{
  "expo": {
    "name": "Murmure",
    "slug": "murmure",
    "scheme": "murmure",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-murmure.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "contentFit": "contain",
      "backgroundColor": "#fffbeb"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.murmureapp.murmure",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleDisplayName": "Murmure",
        "CFBundleName": "Murmure"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#fffbeb"
      },
      "package": "com.murmureapp.murmure",
      "versionCode": 1,
      "permissions": ["android.permission.VIBRATE"],
      "blockedPermissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "name": "Murmure - Ton espace d'écriture libre",
      "shortName": "Murmure",
      "lang": "fr",
      "scope": "/",
      "themeColor": "#92400e",
      "backgroundColor": "#fffbeb",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "description": "Un refuge numérique pour tes pensées les plus intimes. Écris sans filtre, sans jugement.",
      "bundler": "metro"
    },
    "extra": {
      "description": "Une app d'écriture libre pour exprimer tes pensées sans filtre"
    },
    "plugins": ["expo-router", "expo-audio"]
  }
}
